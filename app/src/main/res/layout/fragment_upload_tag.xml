<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:text="New Upload"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/back"
        android:onClick="back"
        android:src="@drawable/back"
        android:layout_width="24dp"
        android:layout_marginLeft="10dp"
        android:layout_height="24dp"/>
    <TextView
        android:id="@+id/line1"
        android:layout_below="@id/back"
        android:background="@color/gray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <TextView
        android:id="@+id/yip_title"
        android:text="title:"
        android:layout_below="@id/line1"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>
    <EditText
        android:id="@+id/title"
        android:layout_below="@id/line1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/yip_title"
        android:background="@drawable/shape_born"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <TableLayout
        android:layout_below="@id/yip_title"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Tag:"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TableRow>
            <TextView
                android:id="@+id/t1"
                android:background="@drawable/shape_born"
                android:text="rainstorm"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:gravity="center"

                android:layout_margin="2dp"
                android:layout_height="50dp"
                />
            <TextView
                android:id="@+id/t2"
                android:background="@drawable/shape_born"
                android:text="blizzard"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"

                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_height="50dp"
                />
            <TextView
                android:id="@+id/t3"
                android:background="@drawable/shape_born"
                android:text="hailstone"
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"

                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/t4"
                android:background="@drawable/shape_born"
                android:text="sandstorm"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_height="50dp"
                />
            <TextView
                android:id="@+id/t5"
                android:background="@drawable/shape_born"
                android:text="cold snap"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:gravity="center"

                android:layout_margin="2dp"
                android:layout_height="50dp"
                />

            <TextView
                android:id="@+id/t6"
                android:background="@drawable/shape_born"
                android:text="other"
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"

                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/t7"
                android:background="@drawable/shape_born"
                android:text="high temperature"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_height="50dp"
                />
            <TextView
                android:id="@+id/t8"
                android:background="@drawable/shape_born"
                android:text="thunderstorm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"

                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_height="50dp"
                />
        </TableRow>
        <TextView

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="File to upload:"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/upload_file"
            android:text="Add File or just type here(text,picture,video)\n"
            android:background="@drawable/shape_born"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:scrollbars="vertical"
            android:textColor="@color/theme_color"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Comment:"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/comment"
            android:background="@drawable/shape_born"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:textColor="@color/theme_color"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:text="your location will used for weather analysis by Red Cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/submit"
            android:background="@drawable/shape_theme_born"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="upload"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </TableLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>