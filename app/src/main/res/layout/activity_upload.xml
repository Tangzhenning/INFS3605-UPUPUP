<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UploadActivity">
    <TextView
        android:text="New Upload"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/back"
        android:onClick="back"
        android:src="@drawable/back"
        android:layout_width="24dp"
        android:layout_marginLeft="10dp"
        android:layout_height="24dp"/>
    <TextView
        android:id="@+id/line1"
        android:layout_below="@id/back"
        android:background="@color/gray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <TextView
        android:id="@+id/yip_title"
        android:text="title:"
        android:layout_below="@id/line1"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>
    <EditText
        android:id="@+id/title"
        android:layout_below="@id/line1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/yip_title"
        android:background="@drawable/shape_born"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <TableLayout
        android:layout_below="@id/yip_title"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="File to upload:"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/upload_file"
            android:text="Add File or just type here(text,picture,video)"
            android:background="@drawable/shape_born"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:textColor="@color/theme_color"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Comment:"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/comment"
            android:background="@drawable/shape_born"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:textColor="@color/theme_color"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            />
        <Button
            android:id="@+id/submit"
            android:background="@drawable/shape_theme_born"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="upload"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </TableLayout>

</RelativeLayout>