<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/login"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        ></TableLayout>
    <TableLayout
        android:background="@drawable/shape_white_born"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >
        <TextView
            android:text="Welcome ClimateMate!"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tip_sign"
            android:text="Sign in to continue"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/image1"
                android:src="@drawable/email"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/email"
                android:text="EMALL"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
               android:layout_toRightOf="@id/image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/et_email"
                android:layout_below="@id/email"
               android:layout_toRightOf="@id/image1"
               android:hint="xxxxxx@gmail.com"
                android:layout_marginLeft="20dp"
                android:drawablePadding="6dp"
                android:background="@drawable/shape_gnull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                />
            <TextView
                android:layout_below="@id/et_email"
                android:background="#111111"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/image2"
                android:src="@drawable/lock"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/password"
                android:text="PASSWORD"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <EditText
                android:hint="input your password"
                android:id="@+id/et_password"
                android:layout_below="@id/password"
                android:layout_toRightOf="@id/image2"
                android:layout_marginLeft="20dp"
                android:drawablePadding="6dp"
                android:inputType="textPassword"
                android:background="@drawable/shape_gnull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                />
            <TextView
                android:layout_below="@id/et_password"
                android:background="#111111"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </RelativeLayout>
        <Button
            android:onClick="loginIn"
            android:background="@drawable/shape_yellow_born"
            android:text="Login in"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:text="Forgot password?"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:background="@drawable/shape_white_born"
            android:text="Sign up"
            android:textAllCaps="false"
            android:onClick="signUp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </TableLayout>
</TableLayout>